#!/bin/sh

prefix=/usr/local
exec_prefix=${prefix}
exec_prefix_set=no

usage()
{
    cat <<EOF
Usage: cabocha-config [OPTIONS]

Options:
  [--cxx]
  [--prefix[=DIR]]
  [--exec-prefix[=DIR]]
  [--libs]
  [--cflags]
  [--dicdir]
  [--libexecdir]
  [--sysconfdir]
  [--libs-only-L]
  [--libs-only-l]
  [--inc-dir]
  [--help]
  [--version]
EOF

    exit $1
}

if test $# -eq 0; then
    usage 1
fi

cflags=false
libs=false

while test $# -gt 0; do
    case "$1" in
    -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
    *) optarg= ;;
    esac

    case "$1" in
    --cxx)
       echo g++
       ;;
       
    --cc)
       echo gcc
       ;;
       
    --prefix=*)
	prefix=$optarg
        if test $exec_prefix_set = no ; then
          exec_prefix=$optarg
        fi
	;;

    --prefix)
	echo $prefix
	;;

    --exec-prefix=*)
	exec_prefix=$optarg
	exec_prefix_set=yes
	;;

    --exec-prefix)
	echo $exec_prefix
	;;

    --version)
	echo 0.69
	exit 0
	;;

    --help)
	usage 0
	;;

    --cflags)
        if test ${prefix}/include != /usr/include ; then
          includes=-I${prefix}/include
        fi
        echo $includes
       	;;

    --libs)
       	echo -L${exec_prefix}/lib -lcabocha -lcrfpp -lmecab  -L/usr/local/lib -lmecab -lstdc++ -liconv
       	;;

    --dicdir)
       	echo ${exec_prefix}/lib/cabocha/model
       	;;
	
    --modeldir)
       	echo ${exec_prefix}/lib/cabocha/model
       	;;
	
    --inc-dir)
        echo ${prefix}/include
	;;
    
    --libs-only-L)
        echo ${exec_prefix}/lib
	;;
	
    --libs-only-l)
        echo -lcabocha -lcrfpp -lmecab  -L/usr/local/lib -lmecab -lstdc++ -liconv | sed s/-l//g;
	;;

    --libexecdir)
       	echo /usr/local/libexec/cabocha
       	;;
	
    --sysconfdir)
       	echo ${prefix}/etc
       	;;

    *)
	usage
	exit 1
	;;
    esac
    shift
done

exit 0
